<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
    <table>
      <thead>
        <tr align="center">
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>合計料金</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>予約確定日時</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td>
            <%= link_to room_path(reservation.room) do %>
            <%= image_tag reservation.room.image.to_s %>
            <% end %>
            </td>
            <td class="posts-name"><%= link_to reservation.room.name, room_path(reservation.room) %></td>
            <td class="posts-content"><%= reservation.room.introduction %></td>
            <td class="price-icon"><%= reservation.room.price %></td>
            <td><%= reservation.start_day %></td>
            <td><%= reservation.end_day %></td>
            <td><%= reservation.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>